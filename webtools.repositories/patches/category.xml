<?xml version="1.0" encoding="UTF-8"?>
<site>

	<!-- List of feature patches to be included -->
    <feature id="org.eclipse.jpt.jpa.feature.patch" >
        <category name="org.eclipse.webtools.patches"/>
    </feature>
   
    <!-- List of features to be patched.
    NOTE: They should be uncategorized in order to ease the filtering when
    creating the final repository.
    Example:
    <feature id="org.eclipse.jpt.jpa.feature" />
    -->
    <feature id="org.eclipse.jpt.jpa.feature" />
   <!-- WTP Patch Category -->
    <category-def
        name = "org.eclipse.webtools.patches"
        label="Web Tools Platform (WTP) Patches @buildversionid@">
        <description>
            These features provide all the public patches for WebTools @buildversionid@ available at the build date. 
        </description>
    </category-def>
</site>
